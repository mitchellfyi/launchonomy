include README.md
include LICENSE
include requirements.txt
include pyproject.toml
include setup.py

# Include all package data
recursive-include launchonomy *.py
recursive-include launchonomy *.json
recursive-include launchonomy *.txt
recursive-include launchonomy *.md

# Include documentation
recursive-include docs *.md
recursive-include docs *.png
recursive-include docs *.jpg
recursive-include docs *.gif

# Include tests
recursive-include tests *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info 